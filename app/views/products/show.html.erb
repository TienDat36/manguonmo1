<p><%= link_to "Back", products_path, class: "btn" %></p>

<section class="product">
  <!-- Product Image -->
  <div class="product-image">
    <%= image_tag @product.featured_image if @product.featured_image.attached? %>
  </div>

  <section class="product-info">
    <% cache @product do %>
      <h1><%= @product.name %></h1>
      <p><%= @product.description %></p>
    <% end %>

    <%= render "inventory", product: @product %>

    <!-- Edit & Delete Buttons (visible if user is authenticated) -->
    <% if authenticated? %>
      <div class="product-actions">
        <%= link_to "Edit", edit_product_path(@product), class: "btn" %>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn" %>
      </div>
    <% end %>
  </section>
</section>
