<%= form_with model: product, html: { class: "form-container" } do |form| %>
  <div class="form-group">
    <%= form.label :name, "Product Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter product name" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Product Description", class: "form-label", style: "display: block;" %>
    <%= form.rich_text_area :description, class: "form-control", placeholder: "Describe the product" %>
  </div>

  <div class="form-group">
    <%= form.label :featured_image, "Featured Image", class: "form-label", style: "display: block;" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control-file" %>
  </div>
   
  <div class="form-group">
    <%= form.label :inventory_count, "Inventory Count", class: "form-label", style: "display: block;" %>
    <%= form.number_field :inventory_count, class: "form-control", placeholder: "Enter quantity" %>
  </div>
   
  <div class="form-actions">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
  </div>
<% end %>
  